<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Spotify - RTW</title>
    <link rel="stylesheet" href="/static/css/style.css">
  </head>
  <body>
    <section>
        <h1>Playing now</h1>
        <div class="info">
          <div id="image" class="image">
            <% album.images.forEach(function(obj){%>
                <img src="<%= obj.url %>" alt="">
            <% }) %>
          </div>
          <div class="text">
            <p><strong>Artist:</strong>
                 <span id="artist">
                    <% artists.forEach(function(obj, idx){ %>
                      <% if (artists.length - 1 === idx) { %>
                        <%= obj.name %>
                       <% return; } %>
                      <%= obj.name %>,
                    <% })%>
                </span>
            </p>
            <p><strong>Song: </strong><span id="song"><%= name %></span></p>
          </div>
           <a href="/chatroom" class="btn btn-primary">Go to the Chat</a>
        </div>
    </section>

  </body>
  <script src="/socket.io/socket.io.js"></script>
  <script src="static/js/index.js"></script>
</html>
